---
import { ClientRouter } from "astro:transitions";
import Nav from "../components/Nav.astro";
const imageDomain = "https://image.tmdb.org";

interface Props {
  title: string | undefined;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Prefetch para mejorar la conexión con image.tmdb.org -->
    <link rel="preconnect" href={imageDomain} />

    <!-- También puedes usar dns-prefetch para reducir el tiempo de resolución de DNS -->
    <link rel="dns-prefetch" href={imageDomain} />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>
      LavaTV - {title}
    </title>
  </head>
  <body class="bg-black">
    <main class="flex flex-col min-h-screen max-w-[96rem] mx-auto">
      <header>
        <Nav />
      </header>
      <slot />
      <footer></footer>
    </main>
  </body>
</html>
